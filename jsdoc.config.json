{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": ["src/"],
    "includePattern": "\\.(jsx|js|ts|tsx|json)$",
    "excludePattern": "(node_modules|docs)"
  },
  "plugins": [
    "plugins/markdown",
    "better-docs/component",
    "better-docs/typescript",
    "better-docs"
  ],
  "templates": {
    "better-docs": {
      "name": "React MFE App"
    }
  },
  "opts": {
    "destination": "./doc",
    "recurse": true    
  }
}
