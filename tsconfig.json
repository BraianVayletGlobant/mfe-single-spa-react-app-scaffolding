{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["hooks/*"],
      "@models/*": ["models/*"],
      "@modules/*": ["modules/*"],
      "@scss/*": ["scss/*"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "files": ["src/santander-mfe-app.tsx"],
  "include": ["src/**/*"]
  // "exclude": ["src/**/*.test*"]
}
